@model IEnumerable<Advertise.ViewModel.Models.Companies.CompanyListViewModel>


@{
    ViewBag.Title = "لیست";

}

<div class="panel panel-default">

    <div class="panel-heading">
        <h3 class="panel-title">لیست شرکت ها</h3>
    </div>

    <div class="panel-body">

        <table class="table">
            <tr>




                <th>
                    @Html.DisplayNameFor(model => model.BrandName )
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Email )
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber )
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>

                    <td>

                        <a class="btn-sm btn btn-default" href="@Url.Action(MVC.Company .Edit(item.Id))"
                           type="button">
                            <i class="fa fa-edit"></i>
                            ویرایش
                        </a>
                        |
                        <a class="btn-sm btn btn-default" href="@Url.Action(MVC.Company.Details(item.Id))"
                           type="button">
                            <i class="fa fa-info-circle"></i>
                            جزییات
                        </a>
                        |
                        <a class="btn-sm btn btn-danger" href="@Url.Action(MVC.Company.Delete(item.Id))"
                           type="button">
                            <i class="fa fa-trash-o"></i>
                            حذف
                        </a>

                    </td>

                </tr>
            }

        </table>



    </div>


    <div class="panel-footer">
        <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("ایجاد جدید", "Create", new { Controller = "Company" }, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-2">
                @Html.ActionLink("مشاهده شرکت ها", "Item", new { Controller = "Company" }, new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
</div>
