
@model Advertise.ViewModel.Models.Categories.CategoryDeleteViewModel

@{
    ViewBag.Title = "حذف";

}
@using (Html.BeginForm(MVC.Category.Delete(), FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3 class="panel-title">حذف دسته</h3>
        </div>

        <div class="panel-body">

            <h3>آیا برای حذف اطمینان دارید؟</h3>
            <div>
                <hr/>
                <dl class="dl-horizontal">


                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>



                </dl>

            </div>

        </div>

        <div class="panel-footer">
            <div class="row">

                <div class="col-md-2">
                    <input type="submit" value="حذف" class="btn btn-primary"/>
                </div>

                <div class="col-md-2">
                    @Html.ActionLink("برگشت به لیست", "List", new {Controller = "Category"}, new {@class = "btn btn-default"})
                </div>
            </div>
        </div>

    </div>
    }